{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2019", "DOM"],
    "target": "ES2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~@types/*": ["@types/*"],
      "~db/*": ["db/*"],
      "~lib/*": ["lib/*"],
      "~services/*": ["lib/services/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
